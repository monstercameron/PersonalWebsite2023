<!-- Begin Blog Post -->
<section>
  <h1 class="text-center text-3xl my-10">Blog</h1>
  <div class="flex flex-col items-center justify-center">
    <article class="flex bg-white transition hover:shadow-xl">
      <div class="rotate-180 p-2 [writing-mode:_vertical-lr]">
        <time
          datetime="2022-10-10"
          class="flex items-center justify-between gap-4 text-xs font-bold uppercase text-gray-900"
        >
          <span> <%= post.date %> </span>
          <span class="w-px flex-1 bg-gray-900/10"></span>
          <span></span>
        </time>
      </div>

      <div class="hidden sm:block sm:basis-56">
        <img
          alt="Guitar"
          src="https://images.unsplash.com/photo-1609557927087-f9cf8e88de18?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80"
          class="aspect-square h-full w-full object-cover"
        />
      </div>

      <div class="flex flex-1 flex-col justify-between">
        <div
          class="border-s border-gray-900/10 p-4 sm:border-l-transparent sm:p-6"
        >
          <a href="#">
            <h3 class="font-bold uppercase text-gray-900"><%= post.title %></h3>
          </a>

          <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-700">
            <%= post.author %>
          </p>

          <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-700">
            <%= post.content %>
          </p>
        </div>

        <div class="sm:flex sm:items-end sm:justify-end">
          <% if (previous) { %>
          <a
            hx-get="/blog?post=<%= previous.id %>"
            hx-target="#main"
            hx-swap="innerHTML"
            hx-push-url="true"
            class="block bg-yellow-300 px-5 py-3 text-center text-xs font-bold uppercase text-gray-900 transition hover:bg-yellow-400 cursor-pointer"
          >
            previous
          </a>
          <% } %>

          <a
            hx-get="/blog"
            hx-target="#main"
            hx-swap="innerHTML"
            hx-push-url="true"
            class="block bg-yellow-300 px-5 py-3 text-center text-xs font-bold uppercase text-gray-900 transition hover:bg-yellow-400 cursor-pointer"
          >
            all
          </a>

          <% if (next) { %>
          <a
            hx-get="/blog?post=<%= next.id %>"
            hx-target="#main"
            hx-swap="innerHTML"
            hx-push-url="true"
            class="block bg-yellow-300 px-5 py-3 text-center text-xs font-bold uppercase text-gray-900 transition hover:bg-yellow-400 cursor-pointer"
          >
            next
          </a>
          <% } %>
        </div>
      </div>
    </article>
  </div>
</section>
<!-- End Blog Post -->
